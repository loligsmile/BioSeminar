\beamer@compresstrue

\AtBeginDocument{
  {
    \usebeamerfont*{headline}
    \colorlet{global.bg}{bg}
    \usebeamercolor{subsection in head/foot}
    \usebeamercolor{section in head/foot}
    \usebeamercolor{frametitle}

     \pgfdeclarehorizontalshading{beamer@aboveframetitle}{16ex}{%
         color(0ex)=(grad1);%
         color(.7\paperwidth)=(grad6);%
         color(\the\paperwidth)=(grad6)
       }
     \pgfdeclarehorizontalshading{beamer@aboveframetitle1}{8ex}{%
         color(0ex)=(grad5);%
         color(\the\paperwidth)=(grad5)
       }

  }
}

                                % Head
\defbeamertemplate*{footline}{smoothbars theme}
{%
  \pgfuseshading{beamer@aboveframetitle1}%
  \ifbeamer@sb@subsection%
    \vskip-9.75ex%
  \else%
    \vskip-7ex%
  \fi%
  \begin{beamercolorbox}[ht=2.25ex,dp=3.75ex]{empty}
    \insertnavigation{\paperwidth}
  \end{beamercolorbox}%

}%



\defbeamertemplate*{headline}{smoothbars theme}
{%

   \begin{beamercolorbox}[wd=\paperwidth,ht=0.8cm,dp=0ex]{frametitle}
    \pgfuseshading{beamer@aboveframetitle}%
  \end{beamercolorbox}%
   
%    \vskip-10ex% 14
    \vskip-10ex%
    \usebeamercolor[bg]{logo}
    \hfill\includegraphics[height=0.7cm]{logo_TUDortmund}\hspace{0.25cm}
  
    \vskip-14ex%
%    \vskip-10ex%
  

}%

\defbeamertemplate*{frametitle}{smoothbars theme}
{%
  \nointerlineskip%
  \usebeamerfont{headline}%
  \vskip5ex%
  \nointerlineskip%
  \begin{beamercolorbox}[wd=.8\paperwidth,leftskip=.3cm,rightskip=.3cm plus1fil,vmode]{empty}
    \usebeamerfont*{frametitle}\insertframetitle%
      \ifx\insertframesubtitle\@empty%
        \strut\par%
      \else
        \par{\usebeamerfont*{framesubtitle}{\usebeamercolor[fg]{framesubtitle}\insertframesubtitle}\strut\par}%
      \fi%%
    \usebeamerfont{headline}%
    \vskip1ex  
  \end{beamercolorbox}%
  \nointerlineskip
}
  
